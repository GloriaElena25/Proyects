@{
    ViewBag.Title = "Billetera";
}

<h2>Billetera</h2>

<form method="post" action="/Billetera/Transferir">
    <div>
        <label>Teléfono Origen:</label>
        <input type="text" name="telefonoOrigen" value="@ViewBag.TelefonoUsuario" required />
    </div>
    <div>
        <label>Teléfono Destino:</label>
        <input type="text" name="telefonoDestino" required />
    </div>
    <div>
        <label>Monto:</label>
        <input type="number" step="0.01" name="monto" required />
    </div>
    <button type="submit">Enviar</button>
</form>

@if (ViewBag.Mensaje != null)
{
    <p>@ViewBag.Mensaje</p>
}

@if (ViewBag.Historial != null)
{
    <h3>Últimas transacciones</h3>
    <table border="1">
        <tr>
            <th>Destinatario</th>
            <th>Monto</th>
            <th>Fecha</th>
        </tr>
        @foreach (System.Data.DataRow row in ((System.Data.DataTable)ViewBag.Historial).Rows)
        {
            <tr>
                <td>@row["Destinatario"]</td>
                <td>@row["Monto"]</td>
                <td>@row["Fecha"]</td>
            </tr>
        }
    </table>
}

